<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.odella.starwars">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".Controller.InfoActivity" android:configChanges="keyboardHidden|orientation|screenSize">
        </activity>
        <activity android:name=".Controller.ListActivity" android:configChanges="keyboardHidden|orientation|screenSize">
        </activity>
        <activity android:name=".Controller.SelectActivity" android:configChanges="keyboardHidden|orientation|screenSize">
        </activity>
        <activity android:name=".Controller.MainActivity" android:configChanges="keyboardHidden|orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <meta-data
                android:name="preloaded_fonts"
                android:resource="@array/preloaded_fonts"/>
    </application>

</manifest>