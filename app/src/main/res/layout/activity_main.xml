<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Controller.MainActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/screen"
            android:id="@+id/wallpaper"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"
            android:scaleType="centerCrop"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STAR LOGIN"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/wallpaper" android:id="@+id/txtTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:textColor="#F2C521" android:textSize="52sp" android:fontFamily="@font/francois_one"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtUser" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="42dp"
            app:layout_constraintTop_toBottomOf="@+id/txtTitle" android:hint="Username"
            android:fontFamily="sans-serif"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txtPass" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/txtUser" android:hint="Password" android:password="false"/>
    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switchPass"
            app:layout_constraintEnd_toEndOf="@+id/txtPass"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/txtPass" app:layout_constraintBottom_toBottomOf="@+id/txtPass"
            app:layout_constraintVertical_bias="0.32999998" android:onClick="onTogglePassword" android:checked="false"
            android:password="false"/>
    <Button
            android:text="Sign In"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnSignin" app:layout_constraintStart_toStartOf="@+id/wallpaper"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/txtPass" app:layout_constraintEnd_toEndOf="@+id/wallpaper"
            style="@style/Widget.AppCompat.Button.Borderless" android:background="@drawable/sw_button_toggle"
            android:textColor="@android:color/white" android:fontFamily="sans-serif-light" android:textAllCaps="false"
            android:layout_marginStart="48dp" android:layout_marginEnd="48dp" android:onClick="onLoginClick"/>
    <TextView
            android:text="Copyright@2019, Tata Consultancy Services"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtCopyright" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:fontFamily="sans-serif-light" android:textSize="10sp" android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>